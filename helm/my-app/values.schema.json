{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "my-app Helm Chart Schema",
  "description": "Schema for validating my-app Helm chart values",
  "type": "object",
  "required": ["replicaCount", "image", "service"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "description": "Number of pod replicas",
      "minimum": 1,
      "maximum": 10,
      "default": 1
    },
    "image": {
      "type": "object",
      "description": "Container image configuration",
      "required": ["repository", "pullPolicy"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository",
          "pattern": "^[a-z0-9-./]*$",
          "default": "kubernetes-platform-stack"
        },
        "tag": {
          "type": "string",
          "description": "Container image tag",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "description": "Image pull policy",
          "enum": ["IfNotPresent", "Always", "Never"],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "description": "Kubernetes service configuration",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Service type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
          "default": "LoadBalancer"
        },
        "port": {
          "type": "integer",
          "description": "Service port",
          "minimum": 1,
          "maximum": 65535,
          "default": 80
        },
        "targetPort": {
          "type": ["integer", "string"],
          "description": "Target container port",
          "default": "http"
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Pod resource requests and limits",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU request (e.g., '100m', '0.5')",
              "default": "100m"
            },
            "memory": {
              "type": "string",
              "description": "Memory request (e.g., '128Mi', '1Gi')",
              "default": "128Mi"
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU limit (e.g., '500m', '1')",
              "default": "500m"
            },
            "memory": {
              "type": "string",
              "description": "Memory limit (e.g., '512Mi', '1Gi')",
              "default": "512Mi"
            }
          }
        }
      }
    },
    "livenessProbe": {
      "type": "object",
      "description": "Liveness probe configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0,
          "default": 10
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 10
        },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 3
        }
      }
    },
    "readinessProbe": {
      "type": "object",
      "description": "Readiness probe configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0,
          "default": 5
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 5
        },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 3
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "description": "Horizontal Pod Autoscaler configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 5
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 80
        },
        "targetMemoryUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 80
        }
      }
    },
    "istio": {
      "type": "object",
      "description": "Istio service mesh integration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Istio sidecar injection",
          "default": true
        }
      }
    },
    "monitoring": {
      "type": "object",
      "description": "Prometheus monitoring configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8080
        },
        "path": {
          "type": "string",
          "default": "/metrics"
        }
      }
    },
    "securityContext": {
      "type": "object",
      "description": "Pod and container security settings",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean",
          "default": true
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0,
          "default": 1000
        },
        "fsGroup": {
          "type": "integer",
          "minimum": 0,
          "default": 1000
        }
      }
    }
  },
  "additionalProperties": true
}
